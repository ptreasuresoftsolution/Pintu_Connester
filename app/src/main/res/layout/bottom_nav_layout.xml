<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomNavHeight"
        android:layout_gravity="bottom"
        android:background="@color/secondary_5"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/secondary_5"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/navHome_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/nav_home" />

            <ImageView
                android:id="@+id/navNetwork_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/nav_network" />

            <ImageView
                android:id="@+id/navAddFeeds_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/nav_add_feeds" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/navNotification_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/nav_notification" />

                <TextView
                    android:id="@+id/notification_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/sign_bullet"
                    android:textColor="@color/primary"
                    android:textSize="40dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/navJob_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/nav_jobs" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
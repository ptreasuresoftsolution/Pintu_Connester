<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/primary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_marginBottom="12dp"
                android:text="See best\nmatch jobs for you"
                android:textColor="@color/secondary_5" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:backgroundTint="@color/primary_dark"
                android:gravity="center_vertical"
                android:text="See Jobs"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                app:strokeColor="@color/primary_dark"
                app:strokeWidth="0dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="18dp"
        android:layout_height="wrap_content" android:src="@drawable/see_job_card_img"/>
</FrameLayout>
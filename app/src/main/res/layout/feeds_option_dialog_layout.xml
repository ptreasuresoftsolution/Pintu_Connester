<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:paddingBottom="10dp"
            android:src="@drawable/bottom_dialog_line" />

        <LinearLayout
            android:id="@+id/feed_close"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/close_remove"
                app:tint="@color/secondary_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Close"
                android:textColor="@color/secondary_3"
                android:textSize="@dimen/label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed_save_unsave"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feed_save_unsave_icon"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:src="@drawable/feed_save_blank"
                app:tint="@color/secondary_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Save"
                android:textColor="@color/secondary_3"
                android:textSize="@dimen/label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed_link_copy"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/link_solid"
                app:tint="@color/secondary_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="Link copy"
                android:textColor="@color/secondary_3"
                android:textSize="@dimen/label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed_unfollow"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/feed_option_unfollow"
                app:tint="@color/secondary_3" />

            <TextView
                android:id="@+id/feed_unfollow_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Unfollow"
                android:textColor="@color/secondary_3"
                android:textSize="@dimen/label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed_report"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/report_item"
                app:tint="@color/secondary_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="Report post"
                android:textColor="@color/secondary_3"
                android:textSize="@dimen/label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_event"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/calendar_edit_event"
                app:tint="@color/secondary_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="Edit Event"
                android:textColor="@color/secondary_3"
                android:textSize="@dimen/label" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>